{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [

                        {
                           "name": "authenticator",
                           "permissions": [
                              {
                                 "uri": "vx.authenticate",
                                 "register": true
                              }
                           ]
                        },

                        {
                           "name": "backend",
                           "permissions": [
                              {
                                 "uri": "*",
                                 "publish": true,
                                 "subscribe": true,
                                 "call": true,
                                 "register": true
                              }
                           ]
                        },

                        {
                           "name": "guest",
                           "allow-by-default": true,
                           "permissions": [
                           ]
                        },

                        {
                           "name": "user",
                           "permissions": [
                           ]
                        }
                    ]
                }
            ],
            "transports": [

                {
                   "type": "websocket",
                   "endpoint": {
                      "type": "tcp",
                      "port": 9000,
                      "interface": "127.0.0.1"
                   },
                   "auth": {
                      "wampcra": {
                         "type": "static",
                         "users": {
                            "authenticator1": {
                               "secret": "secret123",
                               "role": "authenticator"
                            },
                            "backend1": {
                               "secret": "secret456",
                               "role": "backend"
                            }
                         }
                      }
                   }
                },

                {
                   "type": "web",
                   "endpoint": {
                      "type": "tcp",
                      "port": 8080
                   },
                   "paths": {
                      "/": {
                         "type": "static",
                         "directory": "../static",
                         "options": {
                             "cache_timeout": 0
                         }
                      },
                      "api": {
                         "type": "reverseproxy",
                         "host": "127.0.0.1",
                         "port": 8081
                      },
                      "ws": {
                         "type": "websocket",
                         "auth": {
                            "wampcra": {
                               "type": "dynamic",
                               "authenticator": "vx.authenticate"
                            }
                         }
                      }
                   }
                }
            ]
        },

        {
           "type": "guest",
           "executable": "node",
           "arguments": [
                "server/wamp/authenticator.js",
                "ws://127.0.0.1:9000",
                "realm1",
                "authenticator1",
                "secret123"
           ],
           "options": {
                "workdir": "..",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
           }
        },

        {
           "type": "guest",
           "executable": "node",
           "arguments": [
                "server/wamp/backend.js",
                "ws://127.0.0.1:9000",
                "realm1",
                "backend1",
                "secret456"
           ],
           "options": {
                "workdir": "..",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
           }
        },

        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "server.js"
            ],
            "options": {
                "workdir": "../",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
            }
        }
    ]
}
