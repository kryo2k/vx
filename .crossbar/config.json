{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "authenticator",
                            "permissions": [
                                {
                                    "uri": "wamp.",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "vx.authenticate",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "vx.fn.",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "backend",
                            "permissions": [
                                {
                                    "uri": "wamp.",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "vx.",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "guest",
                            "permissions": []
                        },
                        {
                            "name": "user",
                            "permissions": [
                                {
                                    "uri": "vx.user",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 9000,
                        "interface": "127.0.0.1"
                    },
                    "auth": {
                        "wampcra": {
                            "type": "static",
                            "users": {
                                "authenticator1": {
                                    "secret": "secret123",
                                    "role": "authenticator"
                                },
                                "backend1": {
                                    "secret": "secret456",
                                    "role": "backend"
                                },
                                "backend2": {
                                    "secret": "secret789",
                                    "role": "backend"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../build",
                            "options": {
                                "cache_timeout": 0
                            }
                        },
                        "bower_components": {
                            "type": "static",
                            "directory": "../bower_components",
                            "options": {
                                "cache_timeout": 0
                            }
                        },
                        "api": {
                            "type": "reverseproxy",
                            "host": "127.0.0.1",
                            "port": 8081
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "wampcra": {
                                    "type": "dynamic",
                                    "authenticator": "vx.authenticate"
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "server.js",
                "wamp/authenticator",
                "ws://127.0.0.1:9000",
                "realm1",
                "authenticator1",
                "secret123"
            ],
            "options": {
                "workdir": "..",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
            }
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "server.js",
                "wamp/backend",
                "ws://127.0.0.1:9000",
                "realm1",
                "backend1",
                "secret456"
            ],
            "options": {
                "workdir": "..",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
            }
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "server.js",
                "api",
                "8081",
                "127.0.0.1",
                "ws://127.0.0.1:9000",
                "realm1",
                "backend2",
                "secret789"
            ],
            "options": {
                "workdir": "../",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
            }
        }
    ]
}
