{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                   "type": "web",
                   "endpoint": {
                      "type": "tcp",
                      "port": 8080
                   },
                   "paths": {
                      "/": {
                         "type": "static",
                         "directory": "../static",
                         "options": {
                             "cache_timeout": 0
                         }
                      },
                      "api": {
                         "type": "reverseproxy",
                         "host": "127.0.0.1",
                         "port": 8081
                      },
                      "ws": {
                         "type": "websocket",
                         "auth": {
                            "wampcra": {
                               "type": "dynamic",
                               "authenticator": "vx.authenticate"
                            }
                         }
                      }
                   }
                }
            ]
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "server.js"
            ],
            "options": {
                "workdir": "../",
                "watch": {
                    "directories": [
                        "../server",
                        "../config",
                        "../common"
                    ],
                    "action": "restart"
                }
            }
        }
    ]
}
