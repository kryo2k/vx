# editorconfig.org
root = true

[*.js,*.jade,*.html,*.scss,*.css]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.jade]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
